<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Volunteer hours</th>
      <th>Driving distance</th>
      <th>Event summary</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.date %></td>
        <td>
          <% if event.start_time %>
            <%= "#{event.start_time.hour}:#{event.start_time.min.to_s.rjust(2,'0')}" %>
          <% end %>
        </td>
        <td>
          <% if event.end_time %>
            <%= "#{event.end_time.hour}:#{event.end_time.min.to_s.rjust(2,'0')}" %>
          <% end %>
        </td>
        <td><%= event.volunteer_hours %></td>
        <td><%= event.driving_distance %></td>
        <td><%= event.event_summary %></td>
        <td><%= event.comments %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


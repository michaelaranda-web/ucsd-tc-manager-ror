<%= form_for(@event, html: {class: "add-event-form"}) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.time_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :volunteer_hours %> (if different than time between start and end times)<br>
    <%= f.text_field :volunteer_hours %>
  </div>
  <div class="field">
    <%= f.label :driving_distance %><br>
    <%= f.text_field :driving_distance %>
  </div>
  <div class="field">
    <%= f.label :event_summary %><br>
    <%= f.text_area :event_summary %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </div>
  <div class="event-type-dropdown">
    <%= collection_select(:event, :event_type_id, EventType.all, :id, :name, prompt: true) %>  
  </div>
  <div class="attendees-selector-container"></div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

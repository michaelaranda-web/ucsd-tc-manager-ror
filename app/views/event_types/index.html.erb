<p id="notice"><%= notice %></p>

<h1>Listing Event Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Volunteer hours</th>
      <th>Driving distance</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_types.each do |event_type| %>
      <tr>
        <td><%= event_type.name %></td>
        <td><%= event_type.volunteer_hours %></td>
        <td><%= event_type.driving_distance %></td>
        <td>
          <% if event_type.start_time %>
            <%= "#{event_type.start_time.hour}:#{event_type.start_time.min.to_s.rjust(2,'0')}" %>
          <% end %>
        </td>
        <td>
          <% if event_type.end_time %>
            <%= "#{event_type.end_time.hour}:#{event_type.end_time.min.to_s.rjust(2,'0')}" %>
          <% end %>
        </td>
        <td><%= link_to 'Show', event_type %></td>
        <td><%= link_to 'Edit', edit_event_type_path(event_type) %></td>
        <td><%= link_to 'Destroy', event_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<p id="notice"><%= notice %></p>

<div>
  <strong>Name:</strong>
  <%= @event_type.name %>
</div>

<div>
  <strong>Volunteer hours:</strong>
  <%= @event_type.volunteer_hours %>
</div>

<div>
  <strong>Driving distance:</strong>
  <%= @event_type.driving_distance %>
</div>

<div>
  <strong>Start time:</strong>
  <% if @event_type.start_time %>
    <%= "#{@event_type.start_time.hour}:#{@event_type.start_time.min.to_s.rjust(2,'0')}" %>
  <% end %>
</div>

<div>
  <strong>End time:</strong>
  <% if @event_type.end_time %>
    <%= "#{@event_type.end_time.hour}:#{@event_type.end_time.min.to_s.rjust(2,'0')}" %>
  <% end %>
</div>

<%= link_to 'Edit', edit_event_type_path(@event_type) %> |
<%= link_to 'Back', event_types_path %>
